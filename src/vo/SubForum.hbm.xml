<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="vo.SubForum" table="sub_forum" schema="bbs">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="info">
            <column name="info" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="createTime">
            <column name="create_time" sql-type="datetime"/>
        </property>
        <many-to-one name="mainForum" class="vo.MainForum" lazy="false">
            <column name="main_forum_id"/>
        </many-to-one>
        <set name="posts" inverse="true" lazy="false">
            <key>
                <column name="sub_forum_id"/>
            </key>
            <one-to-many not-found="ignore" class="vo.Post"/>
        </set>
    </class>
</hibernate-mapping>