<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="vo.Followpost" table="followpost" schema="bbs">
        <id name="id" column="id">
            <generator class="increment"></generator>
        </id>
        <property name="content" column="content"/>
        <property name="sendTime" column="send_time"/>
        <property name="updateTime" column="update_time"/>
        <many-to-one name="post" class="vo.Post" lazy="false">
            <column name="post_id" />
        </many-to-one>
        <many-to-one name="user" class="vo.User" lazy="false">
            <column name="user_id" />
        </many-to-one>
        <set name="followpostPictures" inverse="true" lazy="false">
            <key>
                <column name="followpost_id" />
            </key>
            <one-to-many not-found="ignore" class="vo.FollowpostPicture"/>
        </set>
    </class>
</hibernate-mapping>