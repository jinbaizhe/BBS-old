<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="vo.Post" table="post" schema="bbs">
        <id name="id" column="id">
            <generator class="increment"></generator>
        </id>
        <property name="title" column="title"/>
        <property name="content" column="content"/>
        <property name="sendTime" column="send_time"/>
        <property name="updateTime" column="update_time"/>
        <property name="type" column="type"/>
        <property name="top" column="top"/>
        <property name="viewNum" column="view_num"/>
        <many-to-one name="user" class="vo.User" lazy="false">
            <column name="user_id" />
        </many-to-one>
        <many-to-one name="subForum" class="vo.SubForum" lazy="false">
            <column name="sub_forum_id" />
        </many-to-one>
        <set name="collections" inverse="true" lazy="false">
            <key>
                <column name="post_id"/>
            </key>
            <one-to-many not-found="ignore" class="vo.Collection"/>
        </set>
        <set name="followposts" inverse="true" lazy="false">
            <key>
                <column name="post_id" />
            </key>
            <one-to-many not-found="ignore" class="vo.Followpost"/>
        </set>
        <set name="postPictures" inverse="true" lazy="false">
            <key>
                <column name="post_id" />
            </key>
            <one-to-many not-found="ignore" class="vo.PostPicture"/>
        </set>
    </class>
</hibernate-mapping>