<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="vo.Picture" table="picture" schema="bbs">
        <id name="id" column="id">
            <generator class="increment"></generator>
        </id>
        <property name="picture" column="picture"/>
        <property name="uploadTime" column="upload_time"/>
        <set name="followpostPictures" inverse="true" lazy="false">
            <key>
                <column name="picture_id" />
            </key>
            <one-to-many not-found="ignore" class="vo.FollowpostPicture"/>
        </set>
        <set name="postPictures" inverse="true" lazy="false">
            <key>
                <column name="picture_id" />
            </key>
            <one-to-many not-found="ignore" class="vo.PostPicture"/>
        </set>
        <set name="users" inverse="true" lazy="false">
            <key>
                <column name="picture_id" />
            </key>
            <one-to-many not-found="ignore" class="vo.User"/>
        </set>
    </class>
</hibernate-mapping>